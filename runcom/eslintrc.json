{
  "env": {
    "node": true,
    "mongo": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true,
      "jsx": true
    }
  },
  "rules": {
    "array-element-newline": [
      "error",
      "consistent"
    ],
    "no-multi-spaces": [
      "error"
    ],
    "quotes": [
      "error",
      "single",
      {
        "avoidEscape": true
      }
    ],
    "quote-props": [
      "warn",
      "as-needed"
    ],
    "semi": "error"
  }
}
