{
  "env": {
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true,
      "jsx": true
    }
  },
  "rules": {
    "array-element-newline": [
      "error",
      "consistent"
    ],
    "no-multi-spaces": ["error"],
    "quotes": ["error", "single"],
    "semi": "error"
  }
}
